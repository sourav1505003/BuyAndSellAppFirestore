<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditProfileActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">


            <customfonts.MyEditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="#0000"
                android:hint="First Name"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="#ADCCE2"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText" />

            <TextView
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:text="First Name:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:text="Last Name:"
                app:layout_constraintStart_toStartOf="@+id/editText"
                app:layout_constraintTop_toBottomOf="@+id/firstName" />



            <customfonts.MyEditText
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="#0000"
                android:hint="Last Name"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="#ADCCE2"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@+id/editText2"
                tools:layout_editor_absoluteX="0dp" />
            <TextView
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Current Password:"
                app:layout_constraintStart_toStartOf="@+id/editText2"
                app:layout_constraintTop_toBottomOf="@+id/lastName" />


            <customfonts.MyEditText
                android:id="@+id/fieldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#0000"
                android:hint="Password (Must be at least 6 characters)"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="#ADCCE2"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@+id/editText3"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/Text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="New Password:"
                app:layout_constraintStart_toStartOf="@+id/editText3"
                app:layout_constraintTop_toBottomOf="@+id/fieldPassword" />

            <customfonts.MyEditText
                android:id="@+id/newPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#0000"
                android:hint="Password (Must be at least 6 characters)"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="#ADCCE2"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@+id/Text4"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/Text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="New Password:"
                app:layout_constraintStart_toStartOf="@+id/editText3"
                app:layout_constraintTop_toBottomOf="@+id/newPassword" />

            <customfonts.MyEditText
                android:id="@+id/confPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#0000"
                android:hint="Password (Must be at least 6 characters)"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="#ADCCE2"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@+id/Text7"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="109dp"
                android:layout_height="23dp"
                android:layout_marginTop="32dp"
                android:hint="District"
                android:text="District:"
                android:textColor="#000"
                android:textColorHint="#ADCCE2"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/Text7"
                app:layout_constraintTop_toBottomOf="@+id/confPassword" />

            <customfonts.MyEditText
                android:id="@+id/district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="#0000"
                android:hint="District"
                android:inputType="text"
                android:maxLength="12"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="#ADCCE2"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text5"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/text6"
                android:layout_width="123dp"
                android:layout_height="36dp"
                android:layout_marginTop="44dp"
                android:text="Date of Birth:"
                android:textColor="#000"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/text5"
                app:layout_constraintTop_toBottomOf="@+id/district" />

            <DatePicker
                android:id="@+id/dateofbirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="36dp"
                android:background="#ffffff"
                android:datePickerMode="calendar"
                android:hint="Date of Birth"
                android:textColor="#ADCCE2"
                android:textColorHint="#ADCCE2"
                android:textSize="5dp"
                app:layout_constraintStart_toStartOf="@+id/text6"
                app:layout_constraintTop_toBottomOf="@+id/text6" />

            <customfonts.MyTextView
                android:id="@+id/buttonSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="32dp"
                android:background="#00AA00"
                android:gravity="center"
                android:padding="16dp"
                android:text="Save Changes"
                android:textColor="#fff"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/dateofbirth"
                app:layout_constraintTop_toBottomOf="@+id/dateofbirth" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</LinearLayout>
